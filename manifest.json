{
    "manifest_version": 3,
    "name": "LeetSpeak Assistant",
    "version": "1.0",
    "description": "Voice-activated LLM assistant for LeetCode reasoning and hints.",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "host_permissions": [
      "https://api.openai.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["*://leetcode.com/problems/*"],
        "js": ["contentScript.js"],
        "css": ["overlay.css"],
        "run_at": "document_idle"
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
  }
  